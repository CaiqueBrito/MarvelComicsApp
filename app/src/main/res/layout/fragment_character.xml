<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/marvel_black">

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/marvel_white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_fragment_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/marvel_white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separator"
        tools:text="HULK" />

    <ImageView
        android:id="@+id/imageview_fragment_character"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_fragment_character_name"
        tools:background="@color/marvel_white" />

    <TextView
        android:id="@+id/textview_fragment_character_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/marvel_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_fragment_character"
        app:layout_constraintTop_toBottomOf="@id/textview_fragment_character_name"
        tools:text="Hulk Smash!!! " />
</androidx.constraintlayout.widget.ConstraintLayout>